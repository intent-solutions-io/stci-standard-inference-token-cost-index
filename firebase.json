{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/v1/**", "function": "api" },
      { "source": "/health", "function": "api" }
    ],
    "headers": [
      {
        "source": "**/*.@(json)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=60"
          }
        ]
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "python312"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "extensions": {
    "firestore-send-email": "firebase/firestore-send-email@0.2.4"
  }
}
